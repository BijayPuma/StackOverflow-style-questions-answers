<div class="card card-body">
    <h3>Edit Question</h3>
    <form action="/questions/update/{{this.id}}?_method=put" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" value="{{this.title}}" name="title" class="form-control" id="" required />
        </div>
        <div class="form-group">
            <label for="question">Question</label>
            <textarea class="form-control" name="question" id="" required>{{this.question}}</textarea>
        </div>

        <button type="submit" class="btn btn-primary" value="Update">Submit</button>
    </form>
</div>